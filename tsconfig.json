{
  "compilerOptions": {
    "module": "es6",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "outDir": "lib",
    "target": "es5",
    "declaration": true,
    "jsx": "react",
    "jsxFactory": "Thesis.createElement",
    "importHelpers": true,
    "lib": [
      "es7",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}
