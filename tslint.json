{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "indent": [true, "tabs", 2],
        "ordered-imports": [
            true,
            {
                "import-sources-order": "any",
                "named-imports-order": "any",
                "grouped-imports": true
            }
        ],
        "no-unused-expression": [true, "allow-fast-null-checks"],
        "max-classes-per-file": [true, 5],
        "jsdoc-format": false,
        "variable-name": [true, "allow-trailing-underscore"],
        "member-access": false
    },
    "rulesDirectory": []
}
